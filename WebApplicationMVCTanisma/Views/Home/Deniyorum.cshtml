@using WebApplicationMVCTanisma.Models;
@{
    ViewBag.Title = "Listele";
}

<h2>Tüm Öğrenciler</h2>
<br />

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Doğum Tarihi</th>
    </tr>

    @foreach (Ogrenci item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Ad</td>
            <td>@item.Soyad</td>
            <td>@item.DogumTarihi.ToString("dd.MM.yyyy")</td>
        </tr>
    }
</table>


